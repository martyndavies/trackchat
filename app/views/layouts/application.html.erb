<!DOCTYPE html>
<html>
<head>
  <title>TrackChat</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, %>
<script type="text/javascript" src="/javascripts/trackchat.js"></script>
  <%= csrf_meta_tag %>
</head>
<body>
		<div id="main">
			<div id="header">
				<% if current_user %>
					<span class="welcome">Welcome <%= current_user.name %>!
					<%= link_to "Sign Out", signout_path %></span>
					<%else%>
					<span class="welcome"></span>
					<% end %>
					<span>
					<h1>TrackChat</h1>
					<h2>What music are the people you follow on Twitter talking about?</h2>
			</div>
			<div class="errors">
			</div>
			<div id="container">
				<% if current_user.nil? %>
					<%= link_to "Sign in with Twitter", "/auth/twitter", :class => "signin" %>
				<% else %>
					<%= yield %>
				<% end %>
			</div>
		</div>
</body>
</html>

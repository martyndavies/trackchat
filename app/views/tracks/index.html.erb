<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Title</th>
    <th>Belongs to playlist</th>
    <th>Artist echonest</th>
    <th>Track echonest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= track.artist %></td>
    <td><%= track.title %></td>
    <td><%= track.belongs_to_playlist %></td>
    <td><%= track.artist_echonest_id %></td>
    <td><%= track.track_echonest_id %></td>
    <td><%= link_to 'Show', track %></td>
    <td><%= link_to 'Edit', edit_track_path(track) %></td>
    <td><%= link_to 'Destroy', track, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

